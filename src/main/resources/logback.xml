<?xml version="1.0" encoding="UTF-8"?><configuration>	<property name="LOG_HOME" value="/systemManlogs"/><!--    <property name="smtpHost" value="smtp.163.com" />    <property name="username" value="name@new4g.cn" />    <property name="email_to" value="name@new4g.cn" />    <property name="password" value="password" />    <property name="SSL" value="true" />    <property name="email_subject" value="xxxx预警" />-->    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">		<encoder>			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger:%L - %msg%n</pattern>		</encoder>	</appender>    <!-- 按照每天生成日志文件 -->      <appender name="busilog"        class="ch.qos.logback.core.rolling.RollingFileAppender">        <Encoding>UTF-8</Encoding>        <file>${LOG_HOME}/busi.log</file>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">              <FileNamePattern>${LOG_HOME}/busi.%d{yyyy-MM-dd}.log</FileNamePattern>            <!-- 保存30天 -->             <MaxHistory>30</MaxHistory>          </rollingPolicy>          <layout class="ch.qos.logback.classic.PatternLayout">              <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - %msg%n              </pattern>         </layout>      </appender> 	   <appender name="tasklog"        class="ch.qos.logback.core.rolling.RollingFileAppender">        <Encoding>UTF-8</Encoding>           <file>${LOG_HOME}/task.log</file>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">              <FileNamePattern>${LOG_HOME}/task.%d{yyyy-MM-dd}.log</FileNamePattern>            <!-- 保存30天 -->            <MaxHistory>30</MaxHistory>          </rollingPolicy>          <layout class="ch.qos.logback.classic.PatternLayout">              <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger - %msg%n              </pattern>         </layout>      </appender>    <!-- 发送邮件 需要依赖 javax.activation 和 javax.mail ，默认是error级别发送邮件-->    <appender name="EMAIL" class="ch.qos.logback.classic.net.SMTPAppender">        <smtpHost>smtp.qc-wbo.com</smtpHost>        <smtpPort>25</smtpPort>        <username>zhouzhengyong@qc-wbo.com</username>   <!-- 发送者用户名和密码 -->        <password>qc123456</password>        <to>287610828@qq.com</to>  <!-- 发送给谁 --><!--        <to>ANOTHER_EMAIL_DESTINATION</to> &lt;!&ndash; additional destinations are possible &ndash;&gt;-->        <from>zhouzhengyong@qc-wbo.com</from> <!-- 谁发送 -->        <subject>异常发送邮件测试</subject>        <asynchronousSending>true</asynchronousSending> <!-- 是否异步发送，true是，false否，默认为true-->        <!--<layout class="ch.qos.logback.classic.PatternLayout">            <pattern>%date %-5level %logger{35} - %message%n</pattern>        </layout>-->        <layout class="ch.qos.logback.classic.html.HTMLLayout"/>    </appender>    <!-- 定时任务日志单独写日志文件-->	 <logger name="com.busi.task" level="INFO" additivity="false">         <appender-ref ref="tasklog" />         <appender-ref ref="EMAIL" />    </logger>		<logger name="com" level="INFO" additivity="false">         <appender-ref ref="console" />    </logger>	<root level="INFO">        <appender-ref ref="busilog" />        <appender-ref ref="console"/>	</root></configuration>