<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/admin/index" decorator="/WEB-INF/main/_main.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
   	<mapping path="/login" exclude="true" />
    <mapping path="/static/*" exclude="true" />
</sitemesh>